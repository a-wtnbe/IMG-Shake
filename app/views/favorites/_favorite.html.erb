<% if article.favorited_by?(current_user) %>
  <%= link_to article.favorites.count, article_favorites_path(article), method: :delete, remote: true, class: "glyphicon glyphicon-heart" %>
<% else %>
  <%= link_to article.favorites.count, article_favorites_path(article), method: :post, remote: true, class: "glyphicon glyphicon-heart-empty" %>
<% end %>