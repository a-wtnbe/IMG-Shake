<div class='container'>
  <div class="card">
    <div class="card-body">
      <h1>編集</h1>
      <%= form_with model: @article, local:true do |f| %>
        <h4>画像</h4>
        <%= f.attachment_field :image %>
        <h4>タイトル</h4>
        <%= f.text_field :title, size: "2x1", class: "form-control" %>
        <h4>説明</h4>
        <%= f.text_area :body, size: "20x10", class: "form-control" %>
        <%= f.submit '編集' %>
      <% end %>
    </div>
  </div>
</div>