<div class='container'>
<div class="card">
<div class="card-body">
  <div class="text-center">
<h1>投稿フォーム</h1>
<%= form_with model: @article, local:true do |f| %>
<%= render 'layouts/errors', model: f.object %>
</div>
  <h4>画像</h4>
  <%= f.attachment_field :image %>
  <h4>タイトル</h4>
  <%= f.text_field :title, size: "2x1", class: "form-control" %>
  <h4>一言感想</h4>
  <%= f.text_area :body, size: "20x10", class: "form-control" %>
  <%= f.submit '投稿' %>
<% end %>

</div>
</div>
</div>