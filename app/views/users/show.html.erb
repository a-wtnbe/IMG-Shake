<div>
  <h3>name: <%= @user.name %></h3>
  <h3>introduction: <%= @user.introduction %></h3>
  <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no-image-icon.jpg" %>

  <% if @user.id == current_user.id %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>
  <%= render 'relationships/follow_button', user: @user %>
</div>

<% @articles.each do |article| %>
<div>
  <p>ユーザーネーム：<%= article.user.name %></p>
  <%= attachment_image_tag @user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no-image-icon.jpg" %>

  <%= link_to article_path(article.id) do %>
    <%= attachment_image_tag article, :image, :fill, 100, 100, format: 'jpeg', fallback: "no-image-icon.jpg" %>
    <p>タイトル：<%= article.title %></p>
    <p>説明：<%= article.body %></p>
  <% end %>
</div>
<% end %>

