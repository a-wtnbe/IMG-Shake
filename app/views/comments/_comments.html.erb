<%= comments.count %>件コメント
<div>
  <% comments.each do |comment| %>
  <% unless comment.id.nil? %>

  <div>
    <div class="icon">
      <%= attachment_image_tag comment.user, :profile_image, fallback: "k0917_2.jpg", class:"comment-image", size: "40x40" %>
    </div>
    <%= link_to "#{comment.user.name}さん", user_path(comment.user.id) %>
    <% if comment.user == current_user %>
    　<%= link_to article_comment_path(comment.article_id, comment.id), method: :delete, remote: true do %>
      <i class="fas fa-trash" style="color: black;"></i>
    <% end %>
    <% end %>
  </div>

    <%= comment.content %>
　 <p><%= comment.created_at.strftime('%Y/%m/%d %H:%M:%S') %></p>
    <% end %>
    <% end %>
</div>