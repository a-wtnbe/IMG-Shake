<%= attachment_image_tag @article, :image, :fill, 50, 50, format: 'jpeg' %>
<%= link_to user_path(@article.user) do %>
<%= attachment_image_tag(@article.user, :profile_image, :fill, 50, 50, format: 'jpeg') %>
<p>ユーザーネーム：<%= @article.user.name %></p>
<% end %>
<p>タイトル：<%= link_to @article.title, article_path(@article) %></p>
<p>説明：<%= @article.body %></p>

<p>投稿日時：<%= @article.created_at.strftime('%Y/%m/%d') %></p>
<% if @article.user == current_user %>
  <%= link_to '編集', edit_article_path(@article) %>
  <%= link_to "削除", article_path(@article), method: :delete, data: { confirm: '本当に消しますか？' } %>
<% end %>
