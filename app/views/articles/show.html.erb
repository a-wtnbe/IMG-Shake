<%= attachment_image_tag @article, :image, :fill, 50, 50, format: 'jpeg' %>
<%= link_to user_path(@article.user) do %>
<%= attachment_image_tag(@article.user, :profile_image, :fill, 50, 50, format: 'jpeg') %>
<p>ユーザーネーム：<%= @article.user.name %></p>
<% end %>
<p>タイトル：<%= link_to @article.title, article_path(@article) %></p>
<p>説明：<%= @article.body %></p>

<p>投稿日時：<%= @article.created_at.strftime('%Y/%m/%d') %></p>
<% if @article.user == current_user %>
  <%= link_to '編集', edit_article_path(@article) %>
  <%= link_to "削除", article_path(@article), method: :delete, data: { confirm: '本当に消しますか？' } %>
<% end %>

<!--<tr id="article_<2%= @article.id %>">-->
<!--  <td class="favorite"><2%= render "favorites/favorite", article: @article %></td>-->
<!--</tr>-->

 <div class='col-xs-9'>
		<h2>Book detail</h2>
		<table class='table'>
		  <tr id="book_<%= @article.id %>">
        <td>
          <%= link_to user_path(@article.user) do %>
            <%= attachment_image_tag(@article.user, :profile_image, :fill, 100, 100, fallback: "no-image-icon.jpg") %><br>
            <%= @article.user.name %>
          <% end %>
        </td>
        <td><%= link_to @article.title, article_path(@article) %></td>
        <td><%= @article.body %></td>
        <td class="favorite"><%= render "favorites/favorite", article: @article %></td>


        <% if @article.user == current_user %>
          <td><%= link_to 'Edit', edit_article_path(@article), class: "btn-sm btn-success edit_book_#{@article.id}" %></td>
          <td><%= link_to 'Destroy', article_path(@article), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn-sm btn-danger destroy_book_#{@article.id}"%></td>
        <% end %>
      </tr>
    </table>


  </div>
</div>

<div>
    <h3>コメント</h3>
      <div id="comments_area">
        <%= render partial: 'comments/comments', locals: { comments: @comments } %>
      </div>
    <% if user_signed_in? %>
        <div class="comment-create">
            <h3>コメントを投稿する</h3>
            <%= render partial: 'comments/form', locals: { comment: @comment, article: @article } %>
        </div>
    <% end %>
</div>