
<% articles.each do |article| %>
  <article class="comic">
    <div class="panel">
        <%= link_to user_path(article.user) do %>
          <%= attachment_image_tag(article.user, :profile_image, :fill, 50, 50, fallback: "k0917_2.jpg") %>
        <% end %>
        <%= article.user.name %>
      <% if article.image_id %>
        <canvas class="DstCanvas"></canvas>
      <% end %>

      <div id="article_<%= article.id %>">
        <div class="favorite"><%= render "favorites/favorite", article: article %></div>
        <div class="<%= article.image_id ? 'imgshake' : '' %>" hidden><%= attachment_image_tag article, :image, :fill, 510, 340, size: "510x340" %></div>
        <!--<2%= image_tag "/uploads/hoge/image/#{i[:id]}/#{i[:image]}" %>-->
      </div>
      <p class="text bottom-right">
        <%= link_to article.title, article_path(article), class: "article_#{article.id}" %>
      </p>
    </div>
  </article>
<% end %>
<%= paginate @articles %>