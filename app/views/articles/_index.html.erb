<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% articles.each do |article| %>
      <tr id="article_<%= article.id %>">
        <td>
          <%= link_to user_path(article.user) do %>
            <%= attachment_image_tag(article.user, :profile_image, :fill, 50, 50) %>
          <% end %>
        </td>
        <td><%= link_to article.title, article_path(article), class: "article_#{article.id}" %></td>
        <td><%= article.body %></td>
        <td class="favorite"><%= render "favorites/favorite", article: article %></td>

      </tr>
    <% end %>
  </tbody>
</table>