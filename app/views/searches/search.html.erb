<div class="card">
  <table class="table table-hover table-inverse">
     <% if @range == '2' %>
     <h2>Article search for "<%= (params[:word]) %>"</h2>
     <thead>
      <tr>
       <th>Title</th>
       <th>Opinion</th>
       <th colspan="3"></th>
      </tr>
     </thead>
     <tbody>
       <% @article.each do |article| %>
        <tr>
         <td>
           <%= link_to article.title.truncate(30), article, class: "article_#{article.id}" %>
         </td>
         <td><%= article.body.truncate(50) %></td>
        </tr>
       <% end %>
     </tbody>

    <% else %>
    <h2>Users search for "<%= (params[:word]) %>"</h2>
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @user.each do |user| %>
        <tr>
          <td><%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "k0917_2.jpg") %></td>
          <td><%= user.name%></td>
          <td><%= link_to "Show", user, class: "user_#{user.id}" %></td>
        </tr>
      <% end %>
    </tbody>
    <% end %>
  </table>
</div>