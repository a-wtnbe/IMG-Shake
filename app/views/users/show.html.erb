<div>
  <h3><%= @user.name %></h3>
  <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg' %>

  <% if @user.id == current_user.id %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>
</div>

<% @articles.each do |article| %>
<div>
  <%= link_to article_path(article.id) do %>
    <%= attachment_image_tag article, :image %>
  <% end %>
  <p>投稿ユーザー画像：ゆーざーの画像入りまーす</p>
  <p>ショップ名：<%= article.title %></p>
  <p>説明：<%= article.body %></p>
  <p>ユーザーネーム：<%= article.user.name %></p>
</div>
<% end %>